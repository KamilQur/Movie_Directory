 <h1>Edit Movie</h1> 

<%= simple_form_for @play,html:{multipart:true} do |f| %>
  <%= f.select :category_id,@categories %> 
  <%= f.file_field :play_img %>  
  <%= f.input :title ,label: "Movie title"%>
  <%= f.input :description %> 
  <%= f.input :director %>
  <%= f.input :videourl %> 

  <%= f.button :submit %>
<% end %> 



