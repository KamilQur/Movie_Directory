<div class="row">
 <div class="col-md-4">
 	<%= image_tag @play.play_img.url(:medium),class: "play-show" %>
 </div>

 <div class="col-md-8">  
 <div class="play-info">
 <h2 class="play-title"><%=@play.title %></h2> 
 <h3 class="play-category">Category: <%=@play.category.name %></h3>
 
 <h3><%=@play.description %></h3>
 <p class="play-director">Director: <%=@play.director %></p> 

 <iframe width="560" height="315" src="<%=@play.videourl %>" frameborder="0" allowfullscreen></iframe>  
 </div> 	
 </div> 
</div>


<div class="row">
 <div class="col-md-12">
  <div class="reviews">
  <h1>Reviews</h1> 
  <%= render @play.reviews %>
  <div>
  	<%= link_to "Add Reviews",new_play_review_path(@play),class: "btn-custom" %>
  </div>
 </div>	
</div>
</div> 




<div class="links btn-group">

<% if user_signed_in? %>
  <% if @play.user_id == current_user.id %>   
<%= link_to "Edit", edit_play_path(@play) %>  
<%= link_to "Delete",play_path(@play), method: :delete, data: {confirm:"Are you sure you want to delete"} %> 
<% end %>  
<% end %> 

</div>


<script>
 $('.review-rating').raty({
 	readOnly: true,
 	score: function(){
 		return $(this).attr('data-score');
 	},
 	path: '/assets'
 }); 	

</script>
















