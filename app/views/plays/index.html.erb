
<h1 class="current-category"><%= params[:category] %></h1>

<% if @plays.count == 0 %>
<h3>There are no movies in this category</h3>
<% else %>


<div class="row">
<% @plays.each do |play| %>
<div class="col-md-3">
 <h3><%=play.title %></h3> 
 <a href="/plays/<%= play.id %>">
 <%= image_tag play.play_img.url(:medium),class: "play" %>    
 </a>
 </div> 
<% end %> 
</div> 
<% end %>


  